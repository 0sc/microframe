<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr id = "_<%= list.id %>">
        <td><%= link_to list.name, "/lists/#{list.id}" %></td>
        <td><%= link_to 'Edit', "/lists/#{list.id}/edit" %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', "/lists/new" %>
